{
    "editor.renderIndentGuides": false,
    "window.zoomLevel"         : 1,
    "editor.minimap.enabled"   : false,
    "editor.fontFamily"        : "Ubuntu Mono,Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize"          : 17,
    "editor.lineHeight"        : 20,
    "editor.rulers"            : [
        80,
        100,
        120,
        140
    ],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline"    : true,
    "editor.tabCompletion"        : "off",
    "editor.tabSize"              : 4,
    "editor.insertSpaces"         : true,
    "editor.scrollBeyondLastLine" : false,
    "python.pythonPath"           : "/usr/local/bin/python",
    "workbench.colorTheme"        : "Ayu Mirage (Legacy)",
    "highlightLine.borderStyle"   : "dashed",
    "highlightLine.borderWidth"   : "1px",
    "highlightLine.borderColor"   : "#18b47b",
    "editor.cursorBlinking"       : "phase",
    "editor.cursorStyle"          : "line",
    "textmarker.enableTelemetry"  : false,
    "workbench.iconTheme"         : "material-icon-theme"
}
