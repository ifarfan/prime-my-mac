{
    "editor.renderIndentGuides": false,
    "window.zoomLevel"         : 1,
    "editor.minimap.enabled"   : false,
    "editor.fontFamily"        : "Ubuntu Mono,Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize"          : 17,
    "editor.lineHeight"        : 20,
    "editor.rulers"            : [
        80,
        100,
        120,
        140
    ],
    "files.trimTrailingWhitespace"          : true,
    "files.insertFinalNewline"              : true,
    "editor.tabCompletion"                  : "off",
    "editor.tabSize"                        : 4,
    "editor.insertSpaces"                   : true,
    "editor.scrollBeyondLastLine"           : false,
    "python.pythonPath"                     : "/usr/local/bin/python",
    "workbench.colorTheme"                  : "Nord",
    "highlightLine.borderStyle"             : "dashed",
    "highlightLine.borderWidth"             : "1px",
    "highlightLine.borderColor"             : "#18b47b",
    "editor.cursorBlinking"                 : "phase",
    "editor.cursorStyle"                    : "line",
    "textmarker.enableTelemetry"            : false,
    "workbench.iconTheme"                   : "material-icon-theme",
    "terminal.integrated.fontSize"          : 16,
    "terminal.integrated.fontFamily"        : "Ubuntu Mono",
    "explorer.confirmDragAndDrop"           : false,
    "gitlens.currentLine.scrollable"        : false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.colorCustomizations"         : {
        "editorError.foreground"  : "#f57a7a51",
        "editorWarning.foreground": "#ffe60033",
        "editorInfo.foreground"   : "#00ff0088"
    },
    "yaml.customTags"                       : [
        "!And scalar",
        "!If scalar",
        "!Not scalar",
        "!Equals scalar",
        "!Or scalar",
        "!FindInMap sequence",
        "!Base64 scalar",
        "!Cidr scalar",
        "!Ref scalar",
        "!Sub scalar",
        "!GetAtt scalar",
        "!GetAZs scalar",
        "!ImportValue scalar",
        "!Select scalar",
        "!Split scalar",
        "!Join sequence"
    ],
    "yaml.format.enable": false
}
